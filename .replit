
run = "python main.py"
entrypoint = "main.py"
modules = ["web", "python-3.12", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "glibcLocales", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "psmisc", "rustc", "tcl", "tk", "zlib"]

[deployment]
run = ["python", "main.py"]
build = ["pip", "install", "-r", "requirements.txt"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80  # ← أضف هذا السطر المهم!

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"  # ← يبقى كما هو لأن main.py يشغل uvicorn
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
