{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**/*.{png,jpg,jpeg,webp,ico,css,js,svg}", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*\\.(png|jpg|jpeg|webp|ico|css|js|svg))",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "crons": [
    {
      "path": "/api/admin/sync-db",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}