{
  "version": 2,
  "buildCommand": "npm install tailwindcss && npx tailwindcss -i ./static/css/input.css -o ./static/css/tailwind.min.css --minify",
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**/*.{png,jpg,jpeg,webp,ico,css,js,svg}", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*\\.(png|jpg|jpeg|webp|ico|css|js|svg))",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}
